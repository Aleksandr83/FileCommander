<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:localViews="using:FileCommander.Views"            
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FileCommander.Views.FileCommanderView">
  <Grid ColumnDefinitions="50*, 3, 50*">    

    <localViews:VirtualFsView />

    <GridSplitter Grid.Column="1" Grid.RowSpan="1" Background="Silver" />

    <localViews:FsView Grid.Column="2" />
    
  </Grid>
</UserControl>
